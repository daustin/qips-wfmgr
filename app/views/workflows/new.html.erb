<h1>New workflow</h1>

<% form_for(@workflow) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>

	 <div id="stages">
   <%= render :partial => 'stage', :collection => @workflow.stages %>
   </div>

   <%= link_to_function "Add a Protocol" do |page|
     page.insert_html :bottom,  :stages, :partial => 'stage', :object => Stage.new(:position => 0)
   end %>


<% end %>

<%= link_to 'Back', workflows_path %>