<h1>New workflow</h1>

<% form_for(@workflow, :name => 'workflow_form') do |f| %>
  <%= f.error_messages %>

<script>


</script>

<table>
	
<tr>
<td valign='top'>
	<p>
	    <%= f.label :name %><br />
	    <%= f.text_field :name %>
	    <%= f.hidden_field :user_id, :value => session[:user_id] %>
	  </p>
	  <p>
	    <%= f.label :description %><br />
	    <%= f.text_area :description, :size => "30x3"%>
	  </p>	
      <p>
	    
	    <%= check_box_tag :make_public %> Make Public
	  </p>

	<h3>Protocols in workflow</h3> 

	<% f.fields_for :stages do |builder| %>
		<%= render :partial => 'stage_fields', :locals => { :f => builder }%>

	<% end %>

	<div>
	<BR>

	<%= link_to_add_fields "Add", f, :stages %>
	</div>

	
</td>	
	
</tr>
<tr>
	<td>
		<BR>
		<p>
			
			<%= hidden_field_tag "submit_flag", "0" %>
			
		    <%= f.submit 'Save & Submit', :onclick => "$('#submit_flag').value = 1"  %>  <%= f.submit 'Save Only' %> <%= link_to 'Back', workflows_path %>
		 </p>
	</td>
</tr>		
	
	
	
	
</table>
   




<% end %>

