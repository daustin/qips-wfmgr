<div class="fields">
<table>
<tr>
  <th><%= f.label :field_type %></th>
  <th><%= f.label :field_label, "Field Label" %></th>
  <th><%= f.label :var_name, "Var Name" %></th>
  <th><%= f.label :description %></th>
  <th><%= f.label :initial_value %></th>
  <th><%= f.label :value_options %> (csv)</th>
  <th></th>
</tr>

<tr>
  <td><%= f.select :field_type, ['text','check_box', 'radio_box', 'select']  %></td>
  <td><%= f.text_field :field_label, :size => 12 %></td>
  <td><%= f.text_field :var_name, :size => 12 %></td>
  <td><%= f.text_field :description %></td>
  <td><%= f.text_field :initial_value, :size => 10 %></td>
  <td><%= f.text_field :value_options %></td>

	<td>
	<%= f.hidden_field :_destroy %>
	<%= link_to_remove_fields "Remove", f %>
	</td>
	
</tr>
</table>

</div>
